
<footer id="footer" class="footer-v3 align-left">
	<div class="container container-ver2">
		<div class="footer-inner">
            <div class="row">	
				<div class="col-md-3 col-sm-6">
					<h3 class="title-footer">{{ text_aboutus}}</h3>	
					<p>{{text_aboutus_txt}}</p> 
					<a class="link-footer" href="{{info }}&amp;information_id=4" title="footer">{{text_read_more}}<i class="fa fa-long-arrow-right"></i></a>
				</div>
							
				<div class="col-md-2 col-sm-6">
					<h3 class="title-footer">{{text_information}}</h3>
					<ul class="list-footer">
					{% for information in informations %}
					  <li><a href="{{information['href']}}">{{information['title']}}</a></li>
					{%endfor%}
					</ul>
				</div>
                        
				 <div class="col-md-3 col-sm-6">
					<h3 class="title-footer">{{text_getit}}</h3>
					<div class="social space-30">
					{% if twitter_link is not empty %}
					 	<a href="{{twitter_link}}" title="t"><i class="fa fa-twitter"></i></a>
					{%endif%}
					{% if fb_link is not empty %}
						<a href="{{fb_link}}" title="f"><i class="fa fa-facebook"></i></a>
					{%endif%}
					{% if youtube_link is not empty %}
						<a href="{{youtube_link}}" title="y"><i class="fa fa-youtube-play"></i></a>
					{%endif%}
						{% if google_link is not empty %}
						<a href="{{google_link}}" title="g"><i class="fa fa-google"></i></a>
					{%endif%}
					</div>
					<h3 class="title-footer">{{text_payment_accpt}}</h3>
					<a href="#" title="paypal"><img src="image/catalog/images/paypal-footer.png" alt="images"></a>
				</div>
				<div class="col-md-4 col-sm-6">
					<h3 class="title-footer">{{text_newslatter}}</h3>
				   <p>{{text_newslatter_con}}</p>
				   <div class="subscribe">
						<form action="http://dasinfomedia.us2.list-manage1.com/subscribe/post?u=fc8e61e3794f99cefef2711fe&id=4f5ca59f3b"  id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" method="post" accept-charset="utf-8">
							<input type="text" onblur="if (this.value == '') {this.value = 'Enter Your Email Address';}" onfocus="if(this.value != '') {this.value = '';}"  class="input-text required-entry validate-email"  placeholder="{{entry_email}}" title="Sign up for our newsletter" id="newsletter" name="email"> 
							<button class="button button1 hover-whit" title="Subscribe" type="submit">{{text_Subscribe}}<i class="fa fa-long-arrow-right"></i></button>
						</form>
					</div>
					 
				</div>
                        
            </div>
        </div>
    </div>
              <!-- End container -->
              <div class="footer-bottom box">
                <div class="container container-ver2">
                    <div class="box bottom">
                        <p class="float-left">{{text_copyright_left}}</p>
                        <div class="float-right">
                            <ul class="menu-bottom-footer"> 
                                <li><a href="{{contact}}">{{text_contact}}</a></li>
                                <li><a href="{{info}}&amp;information_id=5" title="{{text_Term_of_Use}}">{{text_Term_of_Use}}</a></li>
                                <li><a href="{{info}}&amp;information_id=3" title="{{text_Privacy_Policy}}">{{text_Privacy_Policy}}</a></li>
                                <li><a href="{{sitemap}}">{{text_site_map}}</a></li>
                            </ul>
                            <div class="language">
							{{language}}
                                <span>{{text_currency_footer}}</span> 
                                <div class="hover-menu">
								<p class="cur-icon">{{currency}}</p>						
                                </div>
                            </div>
                            
                        </div>
                    </div>
                </div>
                <!-- End container -->
              </div> 
</footer> 
	 



{% for script in scripts %}
<script src="{{ script }}" type="text/javascript"></script>
{% endfor %}

