{{ header }}
<div class="container">
<div class="banner-header banner-lbook3 space-70">
    <img src="image/catalog/images/banner-product-checkout.jpg" alt="Banner-header" class="img-responsive">
            <div class="text">
			 <h3 style="color:#ffffff;">{{ breadcrumbs[2].text }}</h3><p>
			 {% for breadcrumb in breadcrumbs %}
               <a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a><i class="fa fa-caret-right"></i>
			 {% endfor %}</p>
            </div>
</div>
<div class="container container-ver2">
  {% if success %}
  <div class="alert alert-success alert-dismissible"><i class="fa fa-check-circle"></i> {{ success }}
  <button type="button" class="close" data-dismiss="alert">&times;</button></div>
  {% endif %}
  {% if error_warning %}
  <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
  <button type="button" class="close" data-dismiss="alert">&times;</button></div>
  {% endif %}
  <div class="">{{ column_left }}
    {% if column_left and column_right %}
    {% set class = 'col-sm-6' %}
    {% elseif column_left or column_right %}
    {% set class = 'col-sm-9' %}
    {% else %}
    {% set class = 'col-sm-12' %}
    {% endif %}
    <div id="content" class="{{ class }}">{{ content_top }}
	 <div class="row">
            <div class="page-login box space-30">
	 <div class="col-md-6 sign-in space-30">
		 <h3>{{ text_signup }}</h3>
         <p>{{ text_welcome }}</p>
		 <div class="social space-30 box">
                            <a class="float-left" href="#" title="facebook">
                                <i class="fa fa-facebook"></i>
                                {{ text_facebook }}
                            </a>
                            <a class="float-right" href="#" title="TWITTER">
                                <i class="fa fa-twitter"></i>
                                {{ text_twitter }}
                            </a>
         </div>
		 <form action="{{ action }}" method="post" enctype="multipart/form-data" class="form-horizontal">
              <div class="group box space-20">
                <label class="control-label" for="input-email">{{ entry_email }}*</label>
                <input type="text" name="email" value="{{ email }}" placeholder="{{ entry_email }}" id="input-email" class="form-control" />
              </div>
              <div class="group box">
                <label class="control-label" for="input-password">{{ entry_password }}*</label>
                <input type="password" name="password" value="{{ password }}" placeholder="{{ entry_password }}" id="input-password" class="form-control" />
               
			  </div>
			  <div class="remember">
			   <a class="help"  href="{{ forgotten }}">{{ text_forgotten }}</a>
			  </div>
              <input type="submit" value="{{ button_login }}" class="link-v1 rt" />
              {% if redirect %}
              <input type="hidden" name="redirect" value="{{ redirect }}" />
              {% endif %}
            </form>
	 </div>
	 <div class="col-md-6 reg">
        <div class="register box space-50">
            <h3>{{ text_new_account }}</h3>
            <p>{{ text_rumbus }}</p>
			<p>{{ text_register_account }}</p>
			<a href="{{ register }}" class="link-v1 rt">{{ text_signup }}</a>
		</div>
     </div>
	 </div>
	 </div>
      
    </div>
   </div>
</div></div>
{{ footer }}