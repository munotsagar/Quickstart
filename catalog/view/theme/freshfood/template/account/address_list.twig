{{ header }}
<div class="container">
<div class="banner-header banner-lbook3 space-70">
    <img src="image/catalog/images/banner-blog.jpg" alt="Banner-header" class="img-responsive">
            <div class="text">
			 <h3 style="color:#ffffff;">{{ breadcrumbs[2].text }}</h3><p>
			 {% for breadcrumb in breadcrumbs %}
               <a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a><i class="fa fa-caret-right"></i>
			 {% endfor %}</p>
            </div>
</div>
<div id="account-address" class="container account-address">
  <div class="container container-ver2 ">
  {% if success %}
  <div class="alert alert-success alert-dismissible"><i class="fa fa-check-circle"></i> {{ success }}
  <button type="button" class="close" data-dismiss="alert">&times;</button></div>
  {% endif %}
  {% if error_warning %}
  <div class="alert alert-warning"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
  <button type="button" class="close" data-dismiss="alert">&times;</button></div>
  {% endif %}
  <div class="row">
    <div id="content" class="{{ class }}">{{ content_top }}
      <h2  class="title-brand">{{ text_address_book }}</h2>
      {% if addresses %}
      <div class="table-responsive hidden-xs">
        <table class="table">
          {% for result in addresses %}
          <tr>
            <td class="text-left">{{ result.address }}</td>
            <td class="text-right"><a href="{{ result.update }}" class="link-v1 lh-50 rt">{{ button_edit }}</a> &nbsp; <a href="{{ result.delete }}" class="link-v1 lh-50 rt">{{ button_delete }}</a></td>
          </tr>
          {% endfor %}
        </table>
      </div>
	   <div class="table-responsive view hidden-md hidden-sm hidden-lg"> 
			<table class="table table-bordered">
				 {% for result in addresses %}
					<tr><td class="text-left">{{ result.address }}</td></tr>
					<tr><td class="text-right"><a href="{{ result.update }}" class="link-v1 lh-50 rt">{{ button_edit }}</a> &nbsp; <a href="{{ result.delete }}" class="link-v1 lh-50 rt">{{ button_delete }}</a></td></tr>
				  {% endfor %}
			</table>
		</div>
      {% else %}
      <p>{{ text_empty }}</p>
      {% endif %}
      <div class="buttons clearfix">
        <div class="pull-left"><a href="{{ back }}" class="link-v1 lh-50 rt">{{ button_back }}</a></div>
        <div class="pull-right"><a href="{{ add }}" class="link-v1 lh-50 rt">{{ button_new_address }}</a></div>
      </div>
    </div>
   </div>
</div></div></div>
{{ footer }}